<manifest>
	<!--
		Functionalities describes the list of functionalities that our program
		supports. It also is not device specific.
	-->
	<functionalities>
		<supports interface="edu.mines.acmX.exhibit.input_services.hardware.devicedata.DepthImageInterface" />
	</functionalities>

	<!--
		Devices dictates the functionalities that each device can provide.
	-->
	<devices>
		<device name="kinect"
						driver="path.to.driver">
			<provides name="depth" />
			<provides name="2dimage" />
		</device>
	</devices>

</manifest>
