<?xml version="1.0" encoding="utf-8"?>
<manifest 
        xmlns:module="http://some_url_here"
        package="edu.mines.acmx.some_game">

    <uses-sdk 
            module:minSdkVersion="4"
            module:targetSdkVersion="5"/>

    <module 
            module:icon="some_path.jpg" 
            module:title="some_title"
            module:author="some_author"
            module:version="1.2">

        <inputs>
            <input required="false" input-type="acceleration" />
            <!-- without the required, it will default to true -->
            <input require="true" input-type="2Dimage" />
        </inputs>
        <requires-module>
            <module module:package="edu.mines.acmX.some_other_game" />
            <module module:package="edu.mines.acmX.another_game" />
            <!-- possibly include a label for easy typing / remembering -->
        </requires-module>

    </module>

</manifest>
